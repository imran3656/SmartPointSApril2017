<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/tollbar"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dehaze_menu_black_24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/image_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smart_point_sname"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="65dp"
            android:textColor="@color/color_white"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_menu"
            android:layout_toEndOf="@+id/image_menu" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_share_black_24px"
            android:id="@+id/header_share"
            android:layout_marginLeft="227dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6.3dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/header_signin"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6.3dp"
            android:background="@drawable/ic_person_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</LinearLayout>