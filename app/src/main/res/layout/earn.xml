

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/lightgrey"
android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/earn_ll"
tools:context="in.bizzmark.smartpoints_user.earnredeemtab.Earn">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_earn_tab_Layout"
        android:gravity="center">

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/earn_redeem_edittext_drawable">

     <android.support.design.widget.TextInputLayout
        android:layout_width="200dp"
         android:gravity="center"
        android:layout_height="45dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:paddingLeft="18dp"
            android:imeOptions="actionDone"
            android:focusableInTouchMode="true"
            android:hint="Please Enter The Bill Amount:"
            android:id="@+id/et_earn_billAmountText" />
    </android.support.design.widget.TextInputLayout>

        </TableRow>


    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:id="@+id/btn_earn_send"
        android:text="@string/btn_send"
        android:background="@drawable/earn_redeem_button_drawable"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_white"
        android:textStyle="normal"/>


    </TableLayout>


</LinearLayout>
